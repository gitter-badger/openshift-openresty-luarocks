server {
  listen  <%= ENV['OPENSHIFT_OPENRESTY_IP'] %>:<%= ENV['OPENSHIFT_OPENRESTY_PORT'] %>;
  root    <%= ENV['OPENSHIFT_REPO_DIR'] %>public;
  lua_code_cache on;

  location / {
    default_type text/html;
    content_by_lua "ngx.say('Hello world!')";
  }

  location /favicon.ico {
    log_not_found off;
  }

}
